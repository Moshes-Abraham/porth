include "std.porth"

proc main in
  // shift left
  1  3 shl print
  
  "------------------------------\n" puts
  
  // shift right
  32 3 shr print
  
  "------------------------------\n" puts
  
  // bit or
  1 2 or print
  
  "------------------------------\n" puts
  
  // bit and
  1 2 and print
  
  "------------------------------\n" puts
  
  // not
  0 not 1 + print
  
  // TODO: `print` intrinsics cannot print negative numbers in compilation mode
  // 1234 not print
end
